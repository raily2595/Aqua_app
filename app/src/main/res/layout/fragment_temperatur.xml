<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.temperatur.TemperaturFragment">


    <NumberPicker
        android:id="@+id/temppicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/temppicker2"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintStart_toStartOf="parent" />

    <NumberPicker
        android:id="@+id/temppicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/graph"
        app:layout_constraintStart_toEndOf="@+id/temppicker1" />

    <TextView
        android:id="@+id/tempviser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:textAlignment="center"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@id/graph"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/graph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:importantForAccessibility="no"
        android:src="@drawable/graf"
        app:layout_constraintBottom_toTopOf="@id/temppicker1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tempviser" />

    <TextView
        android:id="@+id/minviser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/temppicker1"
        app:layout_constraintEnd_toEndOf="@id/temppicker1"
        app:layout_constraintStart_toStartOf="@id/temppicker1"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/maxviser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/temppicker2"
        app:layout_constraintEnd_toEndOf="@id/temppicker2"
        app:layout_constraintStart_toStartOf="@id/temppicker2"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>